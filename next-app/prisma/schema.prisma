generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String
  name     String?
  provider Provider
  role     Role
  streams  Stream[]
}

model Stream {
  id     String     @id @default(uuid())
  type   StreamType
  active Boolean    @default(true)
  upvote Int
  userId String
  user   User       @relation(fields: [userId], references: [id])
}

enum StreamType {
  Spotify
  Youtube
}

enum Provider {
  Google
  GitHub
}

enum Role {
  Streamer
  Listener
}

model StreamHistory {
  songId     Int      @id @default(autoincrement())
  songs      String[]
  songUrl    String
  timePlayed Int?
}

model Space {
  id       Int     @id @default(autoincrement())
  name     String
  songs    String?
  hostId   Int     @unique
  host     String
  isActive Boolean @default(true)
}

model CurrentStream {
  id         Int    @id @default(autoincrement())
  streamName String
  userId     String @unique
  username   String
  streamId   Int    @unique
}
