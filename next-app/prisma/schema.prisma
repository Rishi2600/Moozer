generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String?
  songs String[]
}

model StreamHistory {
  songId     Int      @id @default(autoincrement())
  songs      String[]
  songUrl    String
  timePlayed Int?
}

model Space {
  id       Int     @id @default(autoincrement())
  name     String
  songs    String?
  hostId   Int  @unique
  host     String
  isActive Boolean @default(true)
}

model CurrentStream {
  id         Int    @id @default(autoincrement())
  streamName String
  userId     String @unique
  username   String
  streamId   Int    @unique
}
